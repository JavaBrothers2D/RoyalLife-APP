<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:padding="11dp">

        <ImageView
            android:id="@+id/image_cgv1"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/cgv" />

        <TextView
            android:id="@+id/txt_cgv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/image_cgv1"
            android:fontFamily="@font/baloo"
            android:text="CGV CINEMA"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <RatingBar
            android:id="@+id/rantingbar"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_cgv1"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/image_cgv1"
            android:rating="4"
            android:layout_marginTop="-4dp"/>

        <TextView
            android:id="@+id/txt_gioithieucgv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rantingbar"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/image_cgv1"
            android:text="CGV is one of the top 5 largest cinema clusters in the world and the largest distributor and cinema complex in Vietnam."/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>