<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:padding="0dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/imagechangvangc">

            <ImageView
                android:id="@+id/backtoMenu3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/backicon" />

            <TextView
                android:id="@+id/txtCGV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="-8dp"
                android:includeFontPadding="false"
                android:text="Chang Vang"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="italic"
                android:fontFamily="@font/bentham"/>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:text="Nằm gọn gàng trong một con hẻm nhỏ trên đường Bạch Đằng, quán mang lại cảm giác tách biệt ra khỏi phố xá xô bồ để rồi vừa được ẩn mình ngắm Sài Gòn lại vừa được “chill”."
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="Chạng Vạng tọa lạc tại tầng 6 của toà nhà, không gian khá thoáng và mát mẻ về đêm. Từ quán có thể “ôm trọn” Sài Gòn và ngắm Landmark lung linh về đêm cực đẹp."
            android:textColor="@color/black"
            android:textSize="15sp" />

        <GridLayout
            android:id="@+id/recyclercgv"
            android:layout_width="382dp"
            android:layout_height="313dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/featured_background"
            android:background="#fff">

            <ImageView
                android:id="@+id/changvang1"
                android:layout_width="120dp"
                android:layout_height="97dp"
                android:layout_row="0"
                android:layout_column="0"
                android:elevation="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/changvang001" />

            <ImageView
                android:id="@+id/changvang2"
                android:layout_width="120dp"
                android:layout_height="97dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginLeft="7dp"
                android:elevation="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/changvang2" />

            <ImageView
                android:id="@+id/changvang3"
                android:layout_width="120dp"
                android:layout_height="97dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginTop="10dp"
                android:elevation="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/changvang3" />

            <ImageView
                android:id="@+id/changvang4"
                android:layout_width="120dp"
                android:layout_height="97dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:elevation="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/changvang4" />

            <ImageView
                android:id="@+id/changvang5"
                android:layout_width="120dp"
                android:layout_height="97dp"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:elevation="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/changvang5" />

            <ImageView
                android:id="@+id/changvang6"
                android:layout_width="120dp"
                android:layout_height="97dp"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:elevation="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/changvang6" />

            <ImageView
                android:id="@+id/changvang7"
                android:layout_width="120dp"
                android:layout_height="97dp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginTop="10dp"
                android:elevation="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/changvang7" />

            <ImageView
                android:id="@+id/changvang9"
                android:layout_width="120dp"
                android:layout_height="97dp"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_marginLeft="7dp"
                android:elevation="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/changvang9" />

            <ImageView
                android:id="@+id/changvang8"
                android:layout_width="120dp"
                android:layout_height="97dp"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:elevation="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/changvang1" />

        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Customer Service"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Hotline: 867189901"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Working hours: 7:00 - 00:30 (Monday to Sunday, including Public Holidays) "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Email support: tranchinhquang@gmail.com"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:id="@+id/changAdd"/>

        <RatingBar
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:rating="4" />


    </LinearLayout>

</ScrollView>