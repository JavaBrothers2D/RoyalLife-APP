<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".Payment">

    <ImageView
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_gravity="center"
        android:src="@drawable/updatelogo"
        android:layout_marginTop="0dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/bentham"
        android:gravity="center_horizontal"
        android:rotation="0"
        android:text="Royal Life"
        android:textAlignment="center"
        android:textColor="#828282"
        android:textSize="70dp"
        android:textStyle="italic"
        android:transitionName="logo_text"
        android:layout_marginTop="-45dp"
        android:layout_marginBottom="60dp"/>

    <TextView
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/bentham"
        android:gravity="center"
        android:text="Pay to Enjoy new life style "
        android:textColor="#828282"
        android:textSize="26.5dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/bentham"
        android:text="everyday with Royal Life"
        android:textColor="#828282"
        android:textSize="26.5dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="140dp"
        android:fontFamily="@font/bentham"
        android:text=". . ."
        android:textColor="#828282"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_marginTop="-20dp"/>

    <Button
        android:id="@+id/btnPay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="-50dp"
        android:background="@drawable/cuttombuttonverify"
        android:fontFamily="@font/baloo"
        android:text="Pay"
        android:textColor="#fff"
        android:textStyle="normal"
        app:backgroundTint="#cc9966" />


</LinearLayout>