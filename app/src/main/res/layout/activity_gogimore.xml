<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:padding="0dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/imagegogi0">

            <ImageView
                android:id="@+id/backtoMenu1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/backicon" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:text="GoGi House – Quán thịt nướng Hàn Quốc Ngon Số 1 sẽ đưa bạn ghé đến những quán thịt nướng tại Seoul đã tạo nên danh tiếng cho nền ẩm thực xứ kim chi. Nếu đã một lần thưởng thức thịt nướng tại GoGi House, bạn sẽ không thể quên được hương vị “ngất ngây” của những món sườn non bò Mỹ, nạc vai bò Mỹ, dẻ sườn tươi…."
            android:textColor="@color/black"
            android:textSize="15sp" />

        <GridLayout
            android:id="@+id/recyclercgv"
            android:layout_width="382dp"
            android:layout_height="313dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:layout_toRightOf="@+id/featured_background"
            android:background="#fff">

            <ImageView
                android:id="@+id/gogi1"
                android:layout_width="120dp"
                android:layout_height="97dp"
                android:layout_row="0"
                android:layout_column="0"
                android:elevation="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/gogi1" />

            <ImageView
                android:id="@+id/gogi2"
                android:layout_width="120dp"
                android:layout_height="97dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginLeft="7dp"
                android:elevation="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/gogi2" />

            <ImageView
                android:id="@+id/gogi3"
                android:layout_width="120dp"
                android:layout_height="97dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginTop="10dp"
                android:elevation="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/gogi3" />

            <ImageView
                android:id="@+id/gogi4"
                android:layout_width="120dp"
                android:layout_height="97dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:elevation="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/gogi4" />

            <ImageView
                android:id="@+id/gogi5"
                android:layout_width="120dp"
                android:layout_height="97dp"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:elevation="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/gogi5" />

            <ImageView
                android:id="@+id/gogi6"
                android:layout_width="120dp"
                android:layout_height="97dp"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:elevation="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/gogi6" />

            <ImageView
                android:id="@+id/gogi7"
                android:layout_width="120dp"
                android:layout_height="97dp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_marginTop="10dp"
                android:elevation="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/gogi7" />

            <ImageView
                android:id="@+id/gogi8"
                android:layout_width="120dp"
                android:layout_height="97dp"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_marginLeft="7dp"
                android:elevation="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/gogi8" />

            <ImageView
                android:id="@+id/gogi9"
                android:layout_width="120dp"
                android:layout_height="97dp"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:elevation="4dp"
                android:scaleType="centerCrop"
                android:src="@drawable/gogi9" />

        </GridLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Customer Service"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Số điện thoại: 043 222 3000"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Giờ mở cửa: 09:00 – 22:00"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Addr: Quận 1 - Central Market Lê Lai, Phường Phạm Ngũ Lão."
            android:textColor="@color/black"
            android:textSize="16sp"
            android:id="@+id/gogiAdd"/>

        <RatingBar
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:rating="4" />
        <Button
            android:id="@+id/btnTicketGogi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/cuttombuttonverify"
            android:fontFamily="@font/baloo"
            android:text="Use Tickets"
            android:textStyle="normal"
            app:backgroundTint="#1cb4a6"
            android:textColor="#fff"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center" />

    </LinearLayout>

</ScrollView>